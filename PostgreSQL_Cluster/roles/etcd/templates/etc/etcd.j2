ETCD_NAME="{{ etcd_name }}"
ETCD_DATA_DIR="/var/lib/etcd"
ETCD_LISTEN_CLIENT_URLS="http://{{ ansible_default_ipv4.address }}:{{ etcd_client_port }},http://127.0.0.1:{{ etcd_client_port }}"
ETCD_LISTEN_PEER_URLS="http://{{ ansible_default_ipv4.address }}:{{ etcd_peer_port }}"
ETCD_ADVERTISE_CLIENT_URLS="http://{{ ansible_default_ipv4.address }}:{{ etcd_client_port }}"
ETCD_INITIAL_ADVERTISE_PEER_URLS="http://{{ ansible_default_ipv4.address }}:{{ etcd_peer_port }}"
ETCD_INITIAL_CLUSTER=etcd1="http://{{ host1 }}:{{ etcd_peer_port }},etcd2=http://{{ host2 }}:{{ etcd_peer_port }},etcd3=http://{{ host3 }}:{{ etcd_peer_port }}"
ETCD_INITIAL_CLUSTER_STATE="new"
ETCD_INITIAL_CLUSTER_TOKEN="etcd-cluster"