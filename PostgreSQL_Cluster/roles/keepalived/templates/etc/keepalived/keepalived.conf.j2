vrrp_instance VI_1 {
        state {{ keepalived_state }}
        interface {{ ansible_default_ipv4.interface }}
        virtual_router_id {{ router_id }}
        priority keepalived_priority={{ keepalived_priority }}
        advert_int 1
        authentication {
              auth_type PASS
              auth_pass {{ keepalived_pass }}
        }
        virtual_ipaddress {
              {{ keepalived_ip }}
        }
}

